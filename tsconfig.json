{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "allowJs": false,
    "sourceMap": true,
    "noImplicitReturns": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "types": [
    "jest"
  ],
  "exclude": [
    "build",
    "dist",
    "_tests_",
    "node_modules"
  ],
  "compileOnSave": false
}
